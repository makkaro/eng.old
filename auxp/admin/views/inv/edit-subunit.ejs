<%- include('../doc-start') %>

<body>
    <%- include('../header') %>

    <center>
        <form method='POST' action='/subunits'>
            <fieldset class='mt-3 w-500'>
                <% if (record) { %>
                    <legend>Edytuj pomieszczenie</legend>
                <% } else { %>
                    <legeend>Dodaj nowe pomieszczenie</legeend>
                <% } %>

                <input type='hidden' name='id' value='<%= record?.id %>'>
                <input type='hidden' name='unitId' value='<%= unitId %>'>
                <input type='hidden' name='invId' value='<%= invId %>'>

                <table class='table-fixed w-80'>
                    <colgroup>
                        <col class='w-auto'>
                        <col class='w-70'>
                    </colgroup>

                    <tr>
                        <td>Nazwa</td>
                        <td><input class='w-full' name='name' value='<%= record?.name %>'></td>
                    </tr>
                </table>
            </fieldset>

            <input class='mt-1' type='submit' value='Zapisz'>
        </form>

        <div class='mt-3'>
            <%- include('../table', {records: elements}) %>
        </div>

        <table class='table-fixed mx-auto mt-3 border-ts-lightgray p-half w-500'>
            <colgroup>
                <col class='w-auto'>
                <col class='w-30'>
                <col class='w-10'>
            </colgroup>

            <tr>
                <th>Warianty</th>
                <th colspan='2'></th>
            </tr>

            <% variants?.forEach(($, i) => { %>
                <% var color = i % 2 ? 'bg-gray-50' : 'bg-gray-100' %>

                <tr class='<%= color %>'>
                    <td>Wariant <%= $.code %></td>


                    <% if ($.img) { %>
                        <td align='center'><%= $.img %></td>
                        <td align='center'><a href='<%= url + '/variant/' + $.id %>'>Zmień</a></td>
                    <% } else { %>
                        <td align='center'>Brak zdjęcia!</td>
                        <td align='center'><a href='<%= url + '/variant/' + $.id %>'>Dodaj</a></td>
                    <% } %>
                </tr>
            <% }) %>
        </table>
    </center>
</body>
