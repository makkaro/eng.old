<%- include('../doc-start') %>

<body>
    <%- include('../header') %>

    <center>
        <form method='POST' action='/inv'>
            <fieldset class='mt-3 w-500'>
                <% if (record) { %>
                    <legend>Edytuj inwestycję</legend>
                <% } else { %>
                    <legend>Dodaj nową inwestycję</legend>
                <% } %>

                <input type='hidden' name='id' value=<%= record?.id %>>

                <table class='table-fixed w-80'>
                    <colgroup>
                        <col class='w-auto'>
                        <col class='w-70'>
                    </colgroup>

                    <tr>
                        <td>Nazwa</td>
                        <td><input class='w-full' name='name' value='<%= record?.name %>'></td>
                    </tr>
                </table>
            </fieldset>

            <input class='mt-1' type='submit' value='Zapisz'>
        </form>
    </center>


    <div class='mt-3'>
        <%- include('../table', {records: children}) %>
    </div>
</body>

<%- include('../doc-end') %>
