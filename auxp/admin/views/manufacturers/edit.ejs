<%- include('../doc-start') %>

<body>
    <%- include('../header') %>

    <center>
        <form method='POST' action='/manufacturers'>
            <fieldset class='mt-3 w-500'>
                <% if (record) { %>
                    <legend>Edytuj producenta</legend>
                <% } else { %>
                    <legend>Dodaj producenta</legend>
                <% } %>

                <input type='hidden' name='id' value='<%= record?.id %>'>

                <table class='table-fixed w-80'>
                    <colgroup>
                        <col class='w-auto'>
                        <col class='w-70'>
                    </colgroup>

                    <tr>
                        <td>Nazwa</td>
                        <td><input class='w-full' name='name' value='<%= record?.name %>' autofocus></td>
                    </tr>
                </table>
            </fieldset>

            <input class='mt-1' type='submit' value='Zapisz'>
        </form>
    </center>

    <style>
        .mt-3 {
            margin-top: 3rem;
        }

        .w-500 {
            width: 500px;
        }

        .table-fixed {
            table-layout: fixed;
        }

        .w-80 {
            width: 80%;
        }

        .w-auto {
            width: auto;
        }

        .w-70 {
            width: 70%;
        }

        .w-full {
            width: 100%;
        }

        .mt-1 {
            margin-top: 1rem;
        }
    </style>
</body>
