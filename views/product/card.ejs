<div class='bg-red-100 grid grid-cols-1 gap-x-6 gap-y-8 sm:grid-cols-12
            lg:gap-x-8'>
    <div class='aspect-w-2 aspect-h-3 overflow-hidden rounded-lg bg-gray-100
                sm:col-span-4 lg:col-span-5'>
        <img class='object-cover object-center'
             src='<%= item.img %>'>
    </div>

    <div class='sm:col-span-8 lg:col-span-7 col-end-auto bg-blue-100'>
        <h2 class='text-2xl font-bold text-gray-900 sm:pr-12'>
            <%= item.name %>
        </h2>

        <p class='text-2xl text-gray-800 mt-2'><%= item.cost %> zł</p>

        <form class='mt-10 bg-orange-100 self-end'>
            <label class='block'>
                <span>Ilość</span>
                <input type='number' name='amount' value='1'>
            </label>

            <input class='block' type='submit' value='Dodaj do koszyka'>
        </form>
    </div>


</div>
